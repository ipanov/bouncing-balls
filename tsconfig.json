{
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowJs": true,
      "outDir": "./dist/",
      "lib": ["es6", "DOM"],
      "target": "es5",
      "sourceMap": true,
      "types": ["reflect-metadata", "jest"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
  }